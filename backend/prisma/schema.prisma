// ---------------------------
// Generator & Datasource
// ---------------------------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------------------------
// Model: LLM Model
// ---------------------------
model Model {
  id          Int      @id @default(autoincrement())
  name        String
  provider    String
  apiModelId  String
  rating      Float    @default(1500)
  gamesPlayed Int      @default(0)

  // Relations
  matchesAsA  Match[]  @relation("ModelA")
  matchesAsB  Match[]  @relation("ModelB")
  responses   Response[]
  campaignsAsA Campaign[] @relation("CampaignModelA")
  campaignsAsB Campaign[] @relation("CampaignModelB")

  @@index([rating, gamesPlayed])
}

// ---------------------------
// Model: User
// ---------------------------
model User {
  id        Int       @id @default(autoincrement())
  nickname  String
  createdAt DateTime  @default(now())
  score     Float     @default(0)

  prompts   Prompt[]
  votes     Vote[]
  posts     Post[]
  postLikes PostLike[]
  campaignRewards CampaignReward[]
  promptLikes PromptLike[]
  userAchievements UserAchievement[]

  @@index([score, createdAt])
}

// ---------------------------
// Model: Campaign (Prize Battle)
// ---------------------------
model Campaign {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  
  // 스폰서 정보
  sponsorName String
  sponsorType String    // "company", "foundation", "individual"
  
  // 프라이즈 정보
  prizeAmount Float
  prizeCurrency String  @default("USD")
  
  // 평가할 모델들
  modelAId    Int
  modelBId    Int
  modelA      Model     @relation("CampaignModelA", fields: [modelAId], references: [id])
  modelB      Model     @relation("CampaignModelB", fields: [modelBId], references: [id])
  
  // 기간
  startDate   DateTime  @default(now())
  endDate     DateTime
  
  // 상태
  status      String    @default("active") // "active", "closed", "rewarded"
  
  // 통계
  totalVotes  Int       @default(0)
  
  createdAt   DateTime  @default(now())
  closedAt    DateTime?
  
  matches     Match[]
  rewards     CampaignReward[]
  
  @@index([status, endDate])
  @@index([sponsorName])
}

// ---------------------------
// Model: CampaignReward (프라이즈 분배 기록)
// ---------------------------
model CampaignReward {
  id          Int       @id @default(autoincrement())
  campaignId  Int
  userId      Int
  
  campaign    Campaign  @relation(fields: [campaignId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
  
  // 보상 계산
  consensusScore Float
  totalVotes     Int
  rewardAmount   Float
  
  createdAt   DateTime  @default(now())
  
  @@unique([campaignId, userId])
  @@index([campaignId])
  @@index([userId])
}

// ---------------------------
// Model: Prompt
// ---------------------------
model Prompt {
  id        Int       @id @default(autoincrement())
  text      String
  userId    Int?
  user      User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt DateTime  @default(now())
  // Shared Prompt Fields
  title     String?
  category  String?
  isShared  Boolean   @default(false)
  likes     Int       @default(0)

  matches   Match[]
  promptLikes PromptLike[]

  @@index([isShared])
  @@index([category])
  @@index([likes])
  @@index([createdAt])
}

// ---------------------------
// Model: Match
// ---------------------------
model Match {
  id         Int       @id @default(autoincrement())

  promptId   Int
  modelAId   Int
  modelBId   Int?      // Optional for single-model chat
  campaignId Int?      // 캠페인에 속한 매치인지
  createdAt  DateTime  @default(now())

  prompt     Prompt    @relation(fields: [promptId], references: [id], onDelete: Cascade)
  modelA     Model     @relation("ModelA", fields: [modelAId], references: [id], onDelete: Cascade)
  modelB     Model?    @relation("ModelB", fields: [modelBId], references: [id], onDelete: Cascade)
  campaign   Campaign? @relation(fields: [campaignId], references: [id], onDelete: SetNull)

  responses  Response[]
  votes      Vote[]
  post       Post?
  
  @@index([campaignId])
}

// ---------------------------
// Model: PromptLike (프롬프트 좋아요)
// ---------------------------
model PromptLike {
  id        Int      @id @default(autoincrement())
  promptId  Int
  userId    Int
  createdAt DateTime @default(now())

  prompt    Prompt   @relation(fields: [promptId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([promptId, userId])
  @@index([promptId])
  @@index([userId])
}

// ---------------------------
// Model: Response
// ---------------------------
model Response {
  id        Int       @id @default(autoincrement())
  matchId   Int
  modelId   Int
  position  String
  content   String
  createdAt DateTime @default(now())

  match     Match     @relation(fields: [matchId], references: [id], onDelete: Cascade)
  model     Model     @relation(fields: [modelId], references: [id], onDelete: Cascade)

  @@index([matchId])
  @@index([modelId])
}

// ---------------------------
// Model: Vote
// ---------------------------
model Vote {
  id             Int      @id @default(autoincrement())
  matchId        Int
  userId         Int?
  chosenPosition String
  createdAt      DateTime @default(now())

  match          Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user           User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  consensusScore   Float @default(0)
  referenceScore   Float @default(0)
  consistencyScore Float @default(0)
  totalScore       Float @default(0)

  @@index([matchId])
  @@index([userId])
  @@index([createdAt])
}

// ---------------------------
// Model: Post (게시글)
// ---------------------------
model Post {
  id        Int      @id @default(autoincrement())
  matchId   Int      @unique
  title     String
  userId    Int?
  likes     Int      @default(0)
  createdAt DateTime @default(now())

  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  postLikes PostLike[]
  postTags  PostTag[]

  @@index([createdAt])
  @@index([userId])
  @@index([likes])
}

// ---------------------------
// Model: Tag (태그)
// ---------------------------
model Tag {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  createdAt DateTime  @default(now())

  postTags  PostTag[]

  @@index([name])
}

// ---------------------------
// Model: PostTag (게시글-태그 관계)
// ---------------------------
model PostTag {
  id        Int      @id @default(autoincrement())
  postId    Int
  tagId     Int
  createdAt DateTime @default(now())

  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([postId, tagId])
  @@index([postId])
  @@index([tagId])
}

// ---------------------------
// Model: PostLike (게시글 좋아요)
// ---------------------------
model PostLike {
  id        Int      @id @default(autoincrement())
  postId    Int
  userId    Int
  createdAt DateTime @default(now())

  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
}

// ---------------------------
// Model: Achievement (업적)
// ---------------------------
model Achievement {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String
  condition   String
  reward      Int      @default(0)
  createdAt   DateTime @default(now())

  userAchievements UserAchievement[]
}

// ---------------------------
// Model: UserAchievement (유저 업적 달성 기록)
// ---------------------------
model UserAchievement {
  id            Int      @id @default(autoincrement())
  userId        Int
  achievementId Int
  achievedAt    DateTime @default(now())
  claimed       Boolean  @default(false)

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@index([userId])
}

// ---------------------------
// Model: PaymentAuthorization (x402 서명 nonce 기록)
// ---------------------------
model PaymentAuthorization {
  id            Int      @id @default(autoincrement())
  walletAddress String
  nonce         String   @unique
  validBefore   BigInt?
  usedAt        DateTime @default(now())
  createdAt     DateTime @default(now())

  @@index([walletAddress])
  @@index([createdAt])
}
