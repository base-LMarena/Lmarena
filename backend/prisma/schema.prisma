// ---------------------------
// Generator & Datasource
// ---------------------------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------------------------
// Model: LLM Model
// ---------------------------
model Model {
  id          Int      @id @default(autoincrement())
  name        String
  provider    String
  apiModelId  String
  rating      Float    @default(1500)
  gamesPlayed Int      @default(0)

  // Relations
  matchesAsA  Match[]  @relation("ModelA")
  matchesAsB  Match[]  @relation("ModelB")
  responses   Response[]

  @@index([rating, gamesPlayed])
}

// ---------------------------
// Model: User
// ---------------------------
model User {
  id        Int       @id @default(autoincrement())
  nickname  String
  createdAt DateTime  @default(now())
  score     Float     @default(0)

  prompts   Prompt[]
  votes     Vote[]

  @@index([score, createdAt])
}

// ---------------------------
// Model: Prompt
// ---------------------------
model Prompt {
  id        Int       @id @default(autoincrement())
  text      String
  userId    Int?
  user      User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt DateTime  @default(now())

  matches   Match[]
}

// ---------------------------
// Model: Match
// ---------------------------
model Match {
  id         Int       @id @default(autoincrement())

  promptId   Int
  modelAId   Int
  modelBId   Int

  prompt     Prompt    @relation(fields: [promptId], references: [id], onDelete: Cascade)
  modelA     Model     @relation("ModelA", fields: [modelAId], references: [id], onDelete: Cascade)
  modelB     Model     @relation("ModelB", fields: [modelBId], references: [id], onDelete: Cascade)

  responses  Response[]
  votes      Vote[]
}

// ---------------------------
// Model: Response
// ---------------------------
model Response {
  id        Int       @id @default(autoincrement())
  matchId   Int
  modelId   Int
  position  String
  content   String
  createdAt DateTime @default(now())

  match     Match     @relation(fields: [matchId], references: [id], onDelete: Cascade)
  model     Model     @relation(fields: [modelId], references: [id], onDelete: Cascade)

  @@index([matchId])
  @@index([modelId])
}

// ---------------------------
// Model: Vote
// ---------------------------
model Vote {
  id             Int      @id @default(autoincrement())
  matchId        Int
  userId         Int?
  chosenPosition String
  createdAt      DateTime @default(now())

  match          Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user           User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  consensusScore   Float @default(0)
  referenceScore   Float @default(0)
  consistencyScore Float @default(0)
  totalScore       Float @default(0)

  @@index([matchId])
  @@index([userId])
  @@index([createdAt])
}
